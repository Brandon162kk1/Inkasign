@model Inkasign.Models.Contacto

@{
    ViewData["Title"] = "Contáctanos";
}
<section>
<fieldset> 
<div>
    <form asp-controller="Contacto"  id="formulario">
        <h3 class="text-center" >@ViewData["Title"]</h3>

        <label asp-for="Name" class="form-label">Nombre:</label>
        <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Ingresa tu nombre" aria-label=".form-control-sm" required/>

        <label asp-for="Email" class="control-label">Correo Electrónico:</label>
        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" required/>


        <label asp-for="Subject" class="control-label">Asunto:</label>
        <input asp-for="Subject" class="form-control" placeholder="Ingresa el asunto del mensaje" required/>

        <label asp-for="Comment" class="control-label">Comentario:</label>
        <textarea asp-for="Comment" class="form-control" placeholder="Ingresa tu comentario" required></textarea>

        <br>

        <center><div class="form-group">
            <button type="submit" class="btn btn-light" style="background-color:#AB291D; color:white;">Enviar</button> 
        </div>               

    </form>


    


    <h1>@ViewData["Message"]</h1>

</div>

</fieldset>
</section>







