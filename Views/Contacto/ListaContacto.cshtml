@model IEnumerable<Inkasign.Models.Contacto>

@{
    ViewData["Title"] = "Lista de Consultas o Dudas";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section id="hero" class="d-flex align-items-center justify-content-center" style="height: 10px;">
<h1>@ViewData["Title"]</h1>
</section><br>
    <div class="container" >
        <div id="contenedor-tabla" class="table-responsive-md">
            <table class="table table-striped " style="font-size: 18px;">
                <thead class="thead-dark">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Correo
            </th>
            <th>
                Asunto
            </th>
            <th>
                Comentario
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger" style="font-size: 15px;" onclick="return confirm('Â¿Desea eliminar el mensaje?')">ELIMINAR</a>
            </td>
        </tr>
}
       </tbody>
            </table>
        </div>
    </div>