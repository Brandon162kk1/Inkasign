@model Inkasign.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Producto</h1>

<h3>Está seguro de eliminar el producto del cátalogo</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Descripción del Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            S/. @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Imagen del Producto
        </dt>
        <dd class = "col-sm-10">
            
            <img class="img-responsive" width="250" height="300"
                       src="/images/@Html.DisplayFor(model => model.ImageName)" alt="@Html.DisplayFor(model => model.ImageName)"  />

            
        </dd>
        <dt class = "col-sm-2">
            Estado del Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Producto" class="btn btn-danger" />
        <br>
        <br>
        <a asp-action="Index">Volver a la Lista de Productos</a>
       
    </form>
</div>
