@model IEnumerable<Inkasign.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<center><h1>Lista de Productos</h1></center>

<p>
    <button style="background-color:lightsalmon; border-color:lightsalmon; color:white"> <a asp-action="Create">Registrar Nuevos Productos</a> </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Nombre del Producto
                
            </th>
            <th>
                Descripci√≥n del Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                Imagen del Producto
                @Html.DisplayNameFor(model => model.ImageName)
                
            </th>
            <th>
               Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                S/. @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <button style="background-color:limegreen; border-color:limegreen; color:white"> <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> </button> |
                <button style="background-color:powderblue; border-color:powderblue; color:white" ><a asp-action="Details" asp-route-id="@item.Id">Detalles</a> </button> |
                <button style="background-color:tomato; border-color:tomato; color:white"> <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
