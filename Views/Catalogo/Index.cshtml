@model IEnumerable<Inkasign.Models.Producto>
@{
    ViewData["Title"] = "Cat√°logo Inkasign Outlet";  
}

     
<center><h1>@ViewData["Title"]</h1></center>

<br>
<br>
<br>
<form asp-controller="Catalogo" asp-action="Index" class="container123">
       <p>
         <input type="text" name="searchString" class="input">
         <input type="image" src="/images/lupa.png" id="btn123"/>

       </p>
</form> 
<br>
<br>
  <div class="container" >
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model ) {
            <div class="col-sm-4">
              <div class="card mb-3" >
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Precio)</p>


                  <center><a class="btn btn-light" asp-action="Agregar" asp-route-id="@item.Id" style="background-color: #AB291D; color:white;"><img src="/images/carrito1.png" class="img-fluid" alt="" width="20px" heigh="20px"> Agregar</a>

                  <a class="btn btn-secondary" asp-action="Detalles" asp-route-id="@item.Id">Detalles</a><center/>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>