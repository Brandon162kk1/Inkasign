@model IEnumerable<Inkasign.Models.Producto>
@{
    ViewData["Title"] = "Catálogo Inkasign Outlet";  
    <script src="~/js/site.js"></script>
}   
<center><h1>@ViewData["Title"]</h1></center>
<br>
  <div class="container" >
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model ) {
            <div class="col-sm-4">
              <div class="card mb-3" >
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text">Precio: S/@Html.DisplayFor(modelItem => item.Precio)</p>
                  <center>
                  <a onclick="agregacion()" class="btn btn-primary" asp-action="Agregar" asp-route-id="@item.Id" style="background-color: red; color:white;"><img src="/images/carrito1.png" class="img-fluid" alt="" width="20px" heigh="20px"> Añadir</a>
                  <a class="btn btn-info" asp-action="Detalles" asp-route-id="@item.Id" style="background-color: blue; color:white;">Ver más</a>
                  <center/>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>